{
  "manifest_version": 2,
  "version": "1.0.0",
  "name": "Focus Mode: Stay focused without frustration",
  "short_name": "Focusmode",
  "description": "Make an informed decision before you visit a distracting websites.",
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "all_frames": false,
      "matches": ["http://*/*", "https://*/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "assets/img/circle (12).png",
    "48": "assets/img/circle (11).png"
  },
  "permissions": ["storage", "tabs"],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'; connect-src ws://localhost:*/",
  "web_accessible_resources": ["assets/img/*"]
}
